{
    "version": 2,
    "github": {
        "enabled": false
    },
    "builds": [
        {
            "src": "/server/src/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "/client/dist/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/server/src/index.js"},
        { "handle": "filesystem" },
        { "src": "/assets/(.*)", "dest": "/client/dist/assets/＄1" },
        { "src": "/(.*).(js|css|ico)", "dest": "/client/dist/＄1.＄2" },
        { "src": "/(.*)", "dest": "/client/dist/index.html" }
    ]
}
